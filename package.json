{
  "name": "healthCheck",
  "displayName": "Health check",
  "version": "1.0.3",
  "publisher": "MohammadSohrabi",
  "engines": {
    "vscode": "^1.95.0"
  },
  "icon": "resources/icon.png", 
  "categories": [
    "Other"
  ],
  "license": "MIT",
  "activationEvents": [
    "onStartupFinished"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/srbmm/vscode_health_check.git"
  },
  "main": "./extension.js",
  "contributes": {
    "colors": [
      {
        "id": "myExtension.notificationBackground",
        "description": "Background color for custom notifications.",
        "defaults": {
          "dark": "#ff0000",
          "light": "#ffcccc",
          "highContrast": "#ff0000"
        }
      }
    ],
    "commands": [
      {
        "command": "health-time.showConfig",
        "title": "Show Configuration"
      },
      {
        "command": "health-time.showLevelConfig",
        "title": "Configure level"
      },
      {
        "command": "health-time.showAlertTypeConfig",
        "title": "Configure Alert Type"
      },
      {
        "command": "health-time.showEnableDisableConfig",
        "title": "Enable/Disable Alert"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "health-time",
          "title": "Health",
          "icon": "resources/icon.png"
        }
      ]
    },
    "views": {
      "health-time": [
        {
          "id": "health-time-view",
          "name": "Health View"
        }
      ],
      "explorer": [
        {
          "id": "healthGuideSidebar",
          "name": "Health Guide"
        }
      ]
    }
  },
  "scripts": {
    "lint": "eslint .",
    "pretest": "npm run lint",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.95.0",
    "@types/mocha": "^10.0.9",
    "@types/node": "20.x",
    "eslint": "^9.13.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1"
  }
}
